<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/s_head1"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="500dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="公司编号："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:layout_height="50dp"
                        android:id="@+id/bh"
                        android:singleLine="true"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="公司名称："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:layout_height="50dp"
                        android:id="@+id/mc"
                        android:singleLine="true"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="所在城市："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:id="@+id/cs"
                        android:singleLine="true"
                        android:layout_height="50dp"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="公司地点："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:layout_height="50dp"
                        android:id="@+id/dd"
                        android:singleLine="true"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="公司法人："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:layout_height="50dp"
                        android:id="@+id/fr"
                        android:singleLine="true"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="联系人："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:layout_height="50dp"
                        android:id="@+id/lxr"
                        android:singleLine="true"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="电话："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:id="@+id/tel"
                        android:singleLine="true"
                        android:layout_height="50dp"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:gravity="right"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="业务范围："
                        android:textSize="35dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <EditText
                        android:layout_width="500dp"
                        android:layout_height="50dp"
                        android:id="@+id/ywfw"
                        android:singleLine="true"
                        android:background="@drawable/s_bk1"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="400dp">
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="添加图片"
                    android:id="@+id/addImage"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:background="@drawable/s_bk2"
                    />
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:id="@+id/im"
                    />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="修改"
                    android:id="@+id/add"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:background="@drawable/s_bk2"
                    />
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="添加供应商"
                    android:id="@+id/addgys"
                    android:layout_marginLeft="200dp"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:background="@drawable/s_bk2"
                    />
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:text="添加商品"
                    android:id="@+id/addsp"
                    android:layout_marginLeft="200dp"
                    android:textSize="30dp"
                    android:textColor="#000"
                    android:background="@drawable/s_bk2"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        />
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listView"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>