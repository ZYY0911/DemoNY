<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="550dp"
        android:layout_height="130dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/after"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/tvYearMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="XXX"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/arrow_right" />

    </LinearLayout>

    <com.haibin.calendarview.CalendarView
        android:id="@+id/myCalender"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="#fff"
        app:current_day_text_color="#f00"
        app:current_month_text_color="#000"
        app:month_view="com.example.demony.range.Range"
        app:other_month_text_color="#ccc"
        app:select_mode="range_mode"
        app:selected_text_color="#fff"
        app:selected_theme_color="@color/colorPrimary"></com.haibin.calendarview.CalendarView>


    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<TextView
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1" />

<TextView
    android:id="@+id/exit"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:text="取消"
    android:textColor="@color/colorPrimary"
    android:textSize="30sp" />

<TextView
    android:id="@+id/submit"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:gravity="center"
    android:text="确定"
    android:textColor="@color/colorPrimary"
    android:textSize="30sp" />

</LinearLayout>
    </LinearLayout>