<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.9"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:layout_width="520dp"
            android:background="#70AC47"
            android:layout_height="530dp">

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/listView"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1.1"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="660dp"
            android:background="#70AC47"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_height="80dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/ceshu"
                    android:text="总供货次数：0次"
                    android:textSize="30dp"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:text="总交易金额：0元"
                    android:textSize="30dp"
                    android:id="@+id/jine"
                    android:textColor="#fff"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="660dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40sp"
            android:layout_height="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间上限:"
                        android:textSize="30dp"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="140dp"
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:id="@+id/tv1"
                        android:background="@drawable/s_bk1"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:src="@drawable/j2"
                        android:layout_marginLeft="260dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="290dp"
                        android:text="时间下限:"
                        android:textSize="30dp"
                        android:textColor="#000"
                        />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="420dp"
                        android:layout_width="150dp"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:gravity="center"
                        android:id="@+id/tv2"
                        android:layout_height="40dp"
                        android:background="@drawable/s_bk1"
                        />
                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:src="@drawable/j2"
                        android:layout_marginLeft="550dp"
                        />
                </RelativeLayout>
                <Button
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="580dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清空"
                    android:id="@+id/qk"
                    android:background="@drawable/s_bk2"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:background="#D6D6D6"
            android:orientation="vertical"
            android:layout_width="660dp"
            android:layout_height="match_parent">
            <TextView
                android:textSize="35dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易详情"
                />
            <ListView
                android:layout_marginTop="20dp"
                android:layout_width="620dp"
                android:divider="@null"
                android:layout_marginLeft="50dp"
                android:id="@+id/listView1"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>