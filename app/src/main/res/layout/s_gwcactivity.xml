<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/s_head2"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="使用日期"
            android:background="@drawable/gwcbk1"
            android:textSize="35dp"
            android:textColor="#fff"
            android:gravity="center"
            />

        <LinearLayout
            android:background="#F1F1F1"
            android:layout_marginLeft="370dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天02/23"
                android:textSize="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预定"
                android:textSize="30dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:background="#F1F1F1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="180dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明天02/24"
                android:id="@+id/jl"
                android:textSize="30dp"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预定"
                android:textSize="30dp"
                android:textColor="#000"
                />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多日期"
            android:textSize="32dp"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_right"
            android:id="@+id/jt"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000"
            />
        <View
            android:layout_width="180dp"
            android:layout_height="10dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="815dp"
            android:background="#fff"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:layout_marginLeft="170dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆名称"
                android:textSize="35dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明书"
                android:textSize="35dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="240dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                android:textSize="35dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            <TextView
                android:layout_marginLeft="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textSize="35dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/listView"
            android:layout_height="match_parent">

        </ListView>
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总金额：0 元"
                android:textSize="35dp"
                android:id="@+id/zje"
                android:layout_marginLeft="30dp"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView

                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="立即支付"
                android:id="@+id/jlzf"
                android:background="@drawable/gwcbk2"
                android:textSize="35dp"
                android:textColor="#fff"
                android:gravity="center"
                />
            <TextView
                android:layout_marginLeft="50dp"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="清空购物车"
                android:background="@drawable/gwcbk3"
                android:textSize="35dp"
                android:id="@+id/qkgwc"
                android:textColor="#000"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>