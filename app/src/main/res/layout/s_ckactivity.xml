<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/s_head2"/>
    <LinearLayout
        android:layout_width="1200dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="#5B9AD4"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原料名称：aaa"
                android:id="@+id/ylmc"
                android:textSize="30dp"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="型号：aaa"
                android:textSize="30dp"
                android:id="@+id/xh"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出货人：aaa"
                android:id="@+id/chr"
                android:textSize="30dp"
                android:textColor="#fff"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接收人："
                android:textSize="30dp"
                android:textColor="#fff"
                />
            <EditText
                android:id="@+id/jsr"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#5B9AD4"
                android:singleLine="true"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="1200dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="#5B9AD4"
        android:layout_height="70dp">
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总出货量："
            android:textSize="30dp"
            android:textColor="#fff"
            />
        <EditText
            android:id="@+id/zchl"
            android:inputType="number"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#F14E03"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="150dp"
            android:id="@+id/sgxz"
            android:gravity="center"
            android:layout_marginLeft="400dp"
            android:background="#fff"
            android:layout_height="60dp"
            android:text="手工选择"
            android:textSize="30dp"
            android:textColor="#000"
            />
    </LinearLayout>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@drawable/s_bk4"
        android:layout_width="1200dp"
        android:layout_height="280dp">
        <ListView
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_marginTop="20dp"
            android:id="@+id/listView"
            android:layout_height="180dp">

        </ListView>
        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginRight="50dp"
                android:id="@+id/zj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="总计：0"
                android:textSize="30dp"
                android:textColor="#000"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="1200dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="#5B9AD4"
        android:layout_height="70dp">
        <TextView
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产线："
            android:textSize="30dp"
            android:textColor="#fff"
            />
        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:buttonTint="#0737E6"
                android:textColor="#000"
                android:layout_marginLeft="100dp"
                android:id="@+id/yi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产线一"
                android:textSize="20dp"
                />
            <RadioButton
                android:layout_marginLeft="100dp"
                android:buttonTint="#ffff00"
                android:textColor="#000"
                android:id="@+id/er"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产线二"
                android:textSize="20dp"
                />
            <RadioButton
                android:layout_marginLeft="100dp"
                android:buttonTint="#00ff00"
                android:textColor="#000"
                android:id="@+id/san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产线三"
                android:textSize="20dp"
                />
            <RadioButton
                android:layout_marginLeft="100dp"
                android:buttonTint="#F55B09"
                android:textColor="#000"
                android:id="@+id/si"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产线四"
                android:textSize="20dp"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="50dp"
            android:background="#5B9AD4"
            android:text="出货记录"
            android:id="@+id/chjl"
            android:textSize="30dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />
        <Button
            android:layout_marginRight="50dp"
            android:background="#5B9AD4"
            android:text="确定"
            android:id="@+id/qd"
            android:textSize="30dp"
            android:layout_width="150dp"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>